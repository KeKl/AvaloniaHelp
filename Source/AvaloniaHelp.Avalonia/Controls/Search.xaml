<UserControl x:Class="AvaloniaHelp.Avalonia.Controls.Search"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Properties="clr-namespace:AvaloniaHelp.Avalonia.Properties;assembly=AvaloniaHelp.Avalonia"
             x:Name="Search">
  
  <Grid ColumnDefinitions="*, Auto" RowDefinitions="Auto, *">
    
    <TextBox Grid.Column="0" Grid.Row="0" 
             Text="{Binding SearchString, ElementName=Search}"
             Watermark="{x:Static Properties:Resources.SearchWatermarkText}"/>
    
    <Button Grid.Column="1" Grid.Row="0"
            Content="{x:Static Properties:Resources.SearchButton}" />
    
    <ListBox Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2"
             Items="{Binding SearchResults, ElementName=Search}" SelectedItem="{Binding SelectedResult, ElementName=Search}" />
  </Grid>
  
</UserControl>